<h2 class="text-center"> 進度排行 </h2>

<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>

      <th>姓名</th>
      <th>完成度</th>
    </tr>
  </thead>

  <tbody>
    <% ranking = 0 %>
    <% @users.each do |user| %>
      <tr>
        <% if user.missions.count != 0 %>
          <% ranking = ranking + 1 %>
          <td><%= ranking %></td>
          <td><%= link_to(user.username, account_user_path(user)) %></td>
          <td><%= user.missions.count %>/14</td>
        <% end %>
      </tr>
    <% end %>

  </tbody>
</table>
