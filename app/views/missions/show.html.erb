<div  class= "col-md-12" >
  <div  class= "group" >
    <%=  link_to("Edit" ,  edit_mission_path(@mission),  class: "btn btn-primary pull-right" ) %>
  </div>
  <h2> <%= @mission.title %> </h2>

  <br>


  <!--多圖-->
  <div class="productDetail">
    <div class="productDetail-left">
      <div class="productDetail-left-bigImage">
        <%= image_tag(@mission.photos[0].image.url, class: "thumbnail") %>
      </div>
      <% if @mission.photos[1].present?%>
        <div class="productDetail-left-imageList">
          <% @mission.photos.each do |p| %>
            <div class="productDetail-left-imageList-item">
              <%= image_tag p.image.url  ,class: "thumbnail" %><br/>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
    <!--多圖結束-->

  <h4> 任務簡述： </h4>
  <p> <%= simple_format(@mission.content) %> </p>
  <br>
  <h4> 心得感想： </h4>
  <p> <%= simple_format(@mission.reflection) %> </p>

  <br>
  <%= link_to("留言", new_mission_comment_path(@mission), class: "btn btn-default pull-middle")%>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>留言</th>
        <th>姓名</th>
        <th>發表時間</th>
      </tr>
    </thead>
    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%=  comment.content %></td>
          <td><%=  comment.user.username %></td>
          <td><%=  comment.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
