<%=  form_for  @mission do |f|  %>
  <% if @mission.errors.any?  %>
    <ul>
      <%  @mission.errors.full_messages.each do |msg|  %>
        <li> <%=  msg  %> </li>
      <%  end  %>
    </ul>
  <%  end  %>

標題
<%=  f.text_field  :title  %>
<br>
內容
<br>
<%=  f.text_area :content  %>
<br>

<%=  f.submit  "Submit", :disable_with => 'Submiting...'  %>
<%  end  %>
